{
  "editor.codeActionsOnSave": {
    "source.fixAll.tslint": true
  },
  "editor.formatOnSave": true,
  "editor.detectIndentation": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.importModuleSpecifier": "relative",
  "editor.tabSize": 2,
  "cSpell.words": ["scrollable", "unflatten"],
  "search.exclude": {
    "src/generated/**.*": true,
    "public/docs/api.json": true,
    "services/api/.webpack/*": true,
    "clients/web/serverless.yml": true,
    "clients/web/.next/*": true,
    "clients/web/.serverless/*": true,
    "clients/web/.serverless_nextjs/*": true,
    "clients/web/pages": true,
    "libs/nextjs/dist": true,
    "libs/nextjs/example/.next": true
  }
}
