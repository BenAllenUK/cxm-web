{
  "name": "omnea",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "setup": "yarn setup:certs; yarn setup:install",
    "setup:certs": "./dev/certs/run.sh",
    "setup:install": "./dev/install/run.sh",
    "setup:uninstall": "./dev/uninstall/run.sh",
    "start": "concurrently -k \"yarn start:web\" \"yarn start:proxy\" \"yarn start:app\" \"yarn start:api\" ",
    "start:app": "yarn --cwd clients/app start",
    "start:proxy": "yarn --cwd clients/proxy start",
    "start:web": "yarn --cwd clients/web start",
    "start:api": "yarn --cwd services/api start",
    "start:web:web": "yarn --cwd clients/web start:web",
    "start:web:codegen": "yarn --cwd clients/web start:codegen",
    "build:translate": "./_scripts/translate/run.sh",
    "deploy:root": "yarn --cwd clients/web deploy:root",
    "deploy:admin": "yarn --cwd clients/web deploy:admin",
    "deploy:api": "yarn --cwd services/api deploy",
    "deploy:docs": "yarn --cwd clients/web deploy:docs",
    "build:web:root": "yarn --cwd clients/web build:root",
    "build:web:admin": "yarn --cwd clients/web build:admin"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BenAllenUK/cxm-web.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/BenAllenUK/cxm-web/issues"
  },
  "homepage": "https://github.com/BenAllenUK/cxm-web#readme",
  "dependencies": {
    "concurrently": "^6.0.0",
    "eslint-config-prettier": "^8.1.0"
  },
  "devDependencies": {
    "eslint": "^7.22.0",
    "serverless-bundle": "^4.2.2"
  }
}
